    "ionic_source_map": "source-map",
    "ionic_bundler": "webpack",
    "ionic_webpack": "./config/webpack.config.js"
  },
  "main": "electron/electron.js",
  "build": {
    "appId": "com.dirsh.wallet",
    "electronVersion": "^2.0.0",
    "asar": false,
    "files": [
      "www/**/*",
      "electron/*"
    ]
